<bench-config>

   <master bindAddress="${127.0.0.1:master.address}" port="${2103:master.port}"/>

   <benchmark initSize="INITS" maxSize="MAXS" increment="INCS">
      <!--DestroyWrapper runOnAllSlaves="true"/-->
      <StartCluster ignorePutResult="true" staggerSlaveStartup="true" delayAfterFirstSlaveStarts="5000" delayBetweenStartingSlaves = "1000"/>
      <ClusterValidation partialReplication="true" passiveReplication="IPR"/>
      <SyntheticWarmup keyGeneratorClass="org.radargun.stressors.ContentionStringKeyGenerator" numberOfAttributes="NKEYS" sizeOfAnAttribute="1000" numOfThreads="1" transactionSize="100"/>
        <CacheSize statName="Before"/>
      <GarbageCollection/>
      <ResetStats/>
      <SyntheticBenchmark sizeOfAnAttribute="1000" keyGeneratorClass="org.radargun.stressors.ContentionStringKeyGenerator" numberOfAttributes="NKEYS" numOfThreads="1" updateXactWrites="NUMW" updateXactReads="NUMWR" readOnlyXactSize="NUMR" writePercentage="WRITEP" allowBlindWrites="false" duration="300000" retryMode="RETRY_SAME_CLASS" statsSamplingInterval="25000" readsBeforeFirstWrite="1" sampleNTCBServiceTime="true" precomputeRWset="false" masterOnlyWrites="true" spinBetweenOps="SPIN"/>
      <CacheSize statName="After"/>
        <DumpHistogram/>
        <CsvReportGeneration/>
   </benchmark>

   <products>
      <infinispan4>
         <config name="cloudtm.xml"/>
      </infinispan4>
   </products>

   <reports>
      <report name="PCvsPR">
                <item product="infinispan4" config="cloudtm.xml"/>
      </report>
   </reports>

</bench-config>
